@using OnlineBookShop
@{
    int i = 1;
}

@model List<UserViewModel>;

<div class="row">
    @await Html.PartialAsync("MenuAdministrator")

    <div class="col-9">
        <h3 class="text-center">Пользователи</h3>
        <br />
        <a class="btn btn-outline-warning" asp-controller="Users" asp-action="AddUser"><i class="bi bi-database-add"> Добавить нового пользователя </i></a>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Логин</th>
                            <th>Имя</th>
                            <th>Номер телефона</th>
                            <th>Роль</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var user in Model)
                        {
                            <tr>
                                <td> @i </td>
                                <td class="col-3"><a style="color:navy" asp-area="Administrator" asp-controller="Users" asp-action="UserDetails" asp-route-id="@user.Id"><p>@user.UserName</p></a></td>
                                <td>@user.Name</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.Role.Name</td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>