@model Cart;

<div class="row">

    @*форма заказа*@
        <h4>Ваш заказ</h4>
        <table class="table" style="font-size:12px">
            <thead>
                <tr>
                    <th style="font-size:12px">Название</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Стоимость</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@string.Format("{0:### ### ###}", item.Product.Cost) руб.</td>
                        <td>
                            @item.Amount
                            <a class="btn btn-outline-secondary btn-sm" href="/cart/delete?productId=@item.Product.Id">-</a>
                            <a class="btn btn-outline-secondary btn-sm" href="/cart/add?productId=@item.Product.Id">+</a>
                        </td>
                        <td>@string.Format("{0:### ### ###}", item.Cost) руб.</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end">
            <h6>Итого: @string.Format("{0:### ### ###}", Model.Cost) руб.</h6>
        </div>
    <div class="col-1"></div>

    @*форма данных покупателя*@
        <form method="post">
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlInput1">ФИО*</label>
                <input type="text" class="form-control" name="name" placeholder="Алиев Али Алиевич">
            </div>
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlInput3">Телефон*</label>
                <input type="tel" class="form-control" name="phoneNumber" placeholder="+7 (928) 555-55-55">
            </div>
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlInput4">Адрес*</label>
                <input type="text" class="form-control" name="address" placeholder="г. Махачкала, ул. Толстого, д. 1">
            </div>
            <div class="form-group" style="margin:10px">
                <label for="exampleFormControlTextarea1">Комментарии к заказу</label>
                <textarea class="form-control" name="comment" rows="3"></textarea>
            </div>
            <div class="text-center" style="margin:30px">
                <a class="btn btn-outline-secondary btn-lg" asp-controller="home" asp-action="index">Продолжить покупки</a>
                <button class="btn btn-outline-success btn-lg" type="submit" asp-controller="order" asp-action="buy">Оформить заказ</button>
            </div>
        </form>
    </div>
