@model Cart

@if (Model == null)
{
    <h3>Корзина пуста </h3>
    <a class="btn btn-primary bi bi-arrow-left" href="/Home/Index" role="button">Пиступить к покупкам </a>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Стоимость</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@string.Format("{0:### ### ###}",item.Product.Cost) руб</td>
                            <td>
                                @item.Amount
                                <a class="btn btn-outline-secondary btn-sm" href="/cart/delete?productId=@item.Product.Id">-</a>
                                <a class="btn btn-outline-secondary btn-sm" href="/cart/add?productId=@item.Product.Id">+</a>
                            </td>
                            <td>@string.Format("{0:### ### ###}",item.Cost) руб</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div align="right">
                <h3>Итого</h3>
                <h4>@string.Format("{0:### ### ###}", Model.Cost) руб</h4>
            </div>
            <div align="center">
                <a class="btn btn-danger bi bi-cart-x" href="/cart/clear" role="button"> >Очистить корзину</a>
            </div>
            <div align="center">
                <a class="btn btn-primary bi bi-arrow-left" href="/Home/Index" role="button"> Продолжить покупки</a>
                <a class="btn btn-success bi bi-arrow-right" href="/order/index" role="button"> Перейти к оформлению</a>
            </div>
        </div>
    </div>
}

