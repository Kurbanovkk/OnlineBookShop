@model Cart

<h2> Корзина </h2>
@if (Model == null)
{
    <h3>Вы пока ничего не добавили в корзину </h3>
    <a class="btn btn-dark" href="/Home/Index" role="button">Пиступить к покупкам </a>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Стоимость</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Cost руб</td>
                            <td>@item.Amount</td>
                            <td>@item.Cost руб</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <h3>Итого</h3>
                <h4>@Model.Cost</h4>
            </div>
        </div>
    </div>
}

