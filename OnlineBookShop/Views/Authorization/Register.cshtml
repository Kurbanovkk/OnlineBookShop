@model RegisterUser

<form method="post">
    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
    <h4>Регистрация</h4>
    <br />
    <div class="row mb-3">
        <label asp-for="UserName" class="col-sm-1 col-form-label">Логин</label>
        <div class="col-sm-3">
            <input type="email" asp-for="UserName" placeholder="Email" class="form-control">
            <span asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="PhoneNumber" class="col-sm-1 col-form-label">Телефон</label>
        <div class="col-sm-3">
            <input asp-for="PhoneNumber" placeholder="+7 (928) 555-55-55" class="form-control">
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input type="Password" asp-for="Password" placeholder="*********" class="form-control">
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ConfirmPassword" class="col-sm-1 col-form-label">Повторите пароль</label>
        <div class="col-sm-3">
            <input type="Password" asp-for="ConfirmPassword" placeholder="*********" class="form-control">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-controller="authorization" asp-action="AddNewUser">Зарегистрироваться</button>
</form>
