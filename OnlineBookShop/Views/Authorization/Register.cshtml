<form method="post">
    <h4>Регистрация</h4>
    <br />
    <div class="row mb-3">
        <label for="login" class="col-sm-1 col-form-label">Логин</label>
        <div class="col-sm-3">
            <input name="Login" type="email" class="form-control" id="login" placeholder="Email">
        </div>
    </div>
    <div class="row mb-3" >
        <label for="Name" class="col-sm-1 col-form-label">Имя*</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="name" placeholder="Али">
        </div>
    </div>
    <div class="row mb-3">
        <label for="PhoneNumber" class="col-sm-1 col-form-label">Телефон*</label>
        <div class="col-sm-3">
            <input type="tel" class="form-control" name="phoneNumber" placeholder="+7 (928) 555-55-55">
        </div>
    </div>
    <div class="row mb-3">
        <label for="Adress" class="col-sm-1 col-form-label">Адрес*</label>
        <br/>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="address" placeholder="г. Махачкала, ул. Толстого, д. 1">
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input name="Password" type="password" class="form-control" id="password" placeholder="*********">
        </div>
    </div>
    <div class="row mb-3">
        <label for="password" class="col-sm-1 col-form-label">Повторите пароль</label>
        <div class="col-sm-3">
            <input name="RepeatPassword" type="password" class="form-control" id="password" placeholder="*********">
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-controller="authorization" asp-action="AddNewUser">Зарегистрироваться</button>
</form>
