@model Login
<form method="post">
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <h4>Вход</h4>
    <br />
    <div class="row mb-3">
        <label asp-for="UserName" class="col-sm-2 col-form-label">Логин</label>
        <div class="col-sm-3">
            <input type="email" asp-for="UserName" placeholder="Email" class="form-control">
            <span asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-2 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input type="Password" asp-for="Password" placeholder="*********" class="form-control">
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-3 offset-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="rememberMe" id="checkbox" value="true">
                <label class="form-check-label" for="checkbox">
                    Запомнить меня
                </label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Authorization" asp-action="Index">Войти</button>
</form>

<a class="btn btn-outline-primary" asp-controller="Authorization" asp-action="Register">Зарегистрироваться ></a>
