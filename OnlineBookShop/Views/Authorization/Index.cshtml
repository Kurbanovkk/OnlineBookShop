<form method="post">
    <h4>Вход</h4>
    <br />
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Эл. почта</label>
        <div class="col-sm-3">
            <input name="UserName" type="email" class="form-control" id="inputEmail3" required>
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input name="password" type="password" class="form-control" id="inputPassword3" required>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-3 offset-sm-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="rememberMe" id="checkbox" value="true">
                <label class="form-check-label" for="checkbox">
                    Запомнить меня
                </label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Authorization" asp-action="Enter">Войти</button>
    <button type="submit" class="btn btn-outline-primary" asp-controller="Authorization" asp-action="Register">Зарегистрироваться</button>
</form>
